  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\FileFragment.Core\FileFragment.Core.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Page Update="MainWindow.xaml">
      <Generator>MSBuild:Compile</Generator>
